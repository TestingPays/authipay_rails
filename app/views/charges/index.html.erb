<% timestamp = Time.now.strftime("%Y:%m:%d-%H:%M:%S") %>
<%= render "partials/authipay_form_modal", post_fix: "WithCard", mode: "payonly", card: true, timestamp: timestamp %>
<%= render "partials/authipay_form_modal", post_fix: "", mode: "payonly", card: false, timestamp: timestamp %>
<%= render "partials/authipay_form_modal", post_fix: "PlusWithCard", mode: "payplus", card: true, timestamp: timestamp %>
<%= render "partials/authipay_form_modal", post_fix: "Plus", mode: "payplus", card: false, timestamp: timestamp %>
<%= render "partials/authipay_form_modal", post_fix: "FullWithCard", mode: "fullpay", card: true, timestamp: timestamp %>
<%= render "partials/authipay_form_modal", post_fix: "Full", mode: "fullpay", card: false, timestamp: timestamp %>

<script>
window.authipay = {
  timestamp: "<%= timestamp %>",
  store_id: "<%= Authipay.store_id %>",
  user_id: "<%= Authipay.user_id %>",
  shared_secret: "<%= Authipay.shared_secret %>"
};
</script>
